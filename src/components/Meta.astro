---
interface Props {
    title?: string;
    description?: string;
}
const { title, description } = Astro.props;

import { SEO } from "astro-seo";
---

<SEO
    title={title || "Reizy"}
    description={description || "Hi! I'm Reizy!"}
    twitter={{
        creator: "@reizyishere"
    }}
    canonical="https://reizy.eu"
    extend={{
        link: [
            { rel: "icon", href: "/fav.png" }
        ],
        meta: [
            { name: "twitter:title", content: title || "Reizy" },
            { name: "twitter:description", content: description || "Hi! I'm Reizy! I'm From Italy." },
            { name: "viewport", content: "width=device-width, initial-scale=1"},
            { name: "theme-color", content: "#3498db"}
        ],
    }}
/>
